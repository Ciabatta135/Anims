-- Create GUI
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = player:WaitForChild("PlayerGui")

local scrollingFrame = Instance.new("ScrollingFrame")
scrollingFrame.Parent = screenGui
scrollingFrame.Size = UDim2.new(0, 220, 0, 400)
scrollingFrame.Position = UDim2.new(0, 10, 1, -410) -- bottom-left
scrollingFrame.CanvasSize = UDim2.new(0, 0, 0, (#animations + 1) * 30)
scrollingFrame.ScrollBarThickness = 8
scrollingFrame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
scrollingFrame.BorderSizePixel = 2

local listLayout = Instance.new("UIListLayout")
listLayout.Parent = scrollingFrame
listLayout.Padding = UDim.new(0, 5)

-- Stop ALL animations
local function stopAllAnimations()
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        for _, track in pairs(humanoid:GetPlayingAnimationTracks()) do
            track:Stop()
        end
    end
end

-- Play selected animation (stop others first)
local function playAnimation(animId)
    stopAllAnimations()
    local char = player.Character or player.CharacterAdded:Wait()
    local humanoid = char:FindFirstChildOfClass("Humanoid")
    if humanoid then
        local anim = Instance.new("Animation")
        anim.AnimationId = "rbxassetid://" .. animId
        local track = humanoid:LoadAnimation(anim)
        track.Looped = true
        track:Play()
    end
end

-- Stop button
local stopButton = Instance.new("TextButton")
stopButton.Size = UDim2.new(1, -10, 0, 25)
stopButton.Text = "ðŸ›‘ Stop Animation"
stopButton.BackgroundColor3 = Color3.fromRGB(150, 50, 50)
stopButton.TextColor3 = Color3.fromRGB(255, 255, 255)
stopButton.Parent = scrollingFrame
stopButton.MouseButton1Click:Connect(stopAllAnimations)

-- Create buttons for all animations
for _, animData in ipairs(animations) do
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, -10, 0, 25)
    button.Text = animData.name
    button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Parent = scrollingFrame

    button.MouseButton1Click:Connect(function()
        playAnimation(animData.id)
    end)
end

-- Toggle menu with M key
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.M then
        scrollingFrame.Visible = not scrollingFrame.Visible
    end
end)
